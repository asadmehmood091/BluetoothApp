<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_margin="10dp"
    android:id="@+id/add_devices"
    android:background="@drawable/background_style3">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_left_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.01" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_right_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.99" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_top_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_center_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.99" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_first_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.49" />



    <TextView
        android:id="@+id/devicename"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Name"
        android:textColor="#1697FE"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/item_center_gl"
        app:layout_constraintLeft_toRightOf="@id/item_left_gl"
        app:layout_constraintRight_toRightOf="@id/item_first_gl"
        app:layout_constraintTop_toBottomOf="@id/item_top_gl" />

    <TextView
        android:id="@+id/deviceMac"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Mac Address"
        android:textColor="#403B40"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/item_center_gl"
        app:layout_constraintLeft_toRightOf="@id/item_first_gl"
        app:layout_constraintRight_toRightOf="@id/item_right_gl"
        app:layout_constraintTop_toBottomOf="@id/item_top_gl" />




</androidx.constraintlayout.widget.ConstraintLayout>