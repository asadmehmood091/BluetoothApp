<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#D4D3D3" />
            <stroke
                android:width="1dp"
                android:color="#D4D3D3" />
            <corners android:topLeftRadius="30dp" android:bottomRightRadius="30dp" android:bottomLeftRadius="30dp" android:topRightRadius="30dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item >
                <shape android:shape="rectangle">
                    <corners android:topLeftRadius="30dp" android:bottomRightRadius="30dp" android:bottomLeftRadius="30dp" android:topRightRadius="30dp"/>
                    <solid android:color="#fff"/>
                    <stroke android:width="3.2dp"
                        android:color="#D4D3D3" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>